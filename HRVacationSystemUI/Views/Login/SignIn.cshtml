﻿
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutMeyavo.cshtml";
}

<div class="row">
    <div class="col-8 offset-2 offset-2">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>DİKKAT!</strong> @ViewBag.ErrorMessage
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


        }

        @if (TempData["ProfilePageError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>DİKKAT!</strong> @TempData["ProfilePageError"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
        {
            <div class="container text-center">
                <h4 class="section-title mb-5">Giriş Yapabilirsiniz...</h4>
                <div class="form-row">
                    <div class="form-group col-sm-12">
                        <label>Email:</label>
                        <input type="text" name="txtEmail" class="form-control" required /> <br />
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.Label("Parola:")
                        @Html.TextBox("txtPassword", null, new { @type = "password", @class = "form-control", required = "required" })

                    </div>
                    <div class="form-group col-sm-12 mt-3">
                        <input type="submit" value="GİRİŞ YAP" class="btn btn-primary rounded " />

                        @Html.ActionLink("KAYIT OL", "Register", "Login", new { @class = "btn btn-outline-primary rounded " })
                    </div>
                </div>
            </div>
                }
    </div>
</div>
