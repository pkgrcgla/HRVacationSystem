<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("hrvacationstyle", required: false)
</head>
<body>

   @{
       //Buradaki nav elementini bir partial view içine yazdık. Aşağıdaki kod ile partial viewi çağırıyoruz. NOT: ASpnet mvc core projesinde bu yapının yerine ViewComponent kullanacağız
       Html.RenderAction("TopNavMenu", "Home");
           }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
